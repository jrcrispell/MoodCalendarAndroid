<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.jrcrispell.moodcalendar.DisplayLoggerActivity"
    android:background="@mipmap/background"
    android:fitsSystemWindows="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/dateTextView"
                    android:layout_gravity="center_horizontal"
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    MAY 27, 2017    " />




            <TextView
                android:id="@+id/startTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="none"
                android:text="8:00"
                android:textColor="@color/brightWhite"
                android:textSize="26sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textColor="@color/brightWhite"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/endTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="none"
                android:text="8:00"
                android:textColor="@color/brightWhite"
                android:textSize="26sp" />

            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/descriptionET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/activity_description"
                android:textColorHint="@color/white80Percent"
                android:textColor="@color/brightWhite"
                android:padding="12dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="28sp"/>


            <TextView
                android:id="@+id/moodTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/brightWhite"
                android:textSize="32sp"
                android:text="@string/_5"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cancel_button"
                    style="@style/Widget.AppCompat.Button.Borderless.NavigationButton"
                    android:layout_marginEnd="32dp"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/save_button"
                    style="@style/Widget.AppCompat.Button.Borderless.NavigationButton"
                    android:text="@string/save" />


            </LinearLayout>

        </LinearLayout>


</LinearLayout>
