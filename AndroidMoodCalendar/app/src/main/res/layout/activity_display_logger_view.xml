<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wordpress.jrcrispell.moodcalendar.LoggerActivity">

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startTimeTV"
            style="@style/logger_time_tvs"
            android:text="8:00"
            />
        <TextView
            android:id="@+id/startAMPMTV"
            android:text="AM"
            android:layout_marginEnd="36dp"
            style="@style/loggerAMPMTVs" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/brightWhite"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/endTimeTV"
            style="@style/logger_time_tvs"
            android:text="8:00"
            android:layout_marginStart="36dp"
            />

        <TextView
            android:id="@+id/endAMPMTV"
            android:text="AM"
            style="@style/loggerAMPMTVs" />

    </LinearLayout>

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="32dp"
        android:hint="@string/activity_description"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/brightWhite"
        android:textColorHint="@color/eventBorderColor"
        android:textSize="32sp" />


    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/moodTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/_5"
        android:textColor="@color/brightWhite"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
